<head>
    <!-- Link Swiper's CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
</head>


<div class="FeaturedSection">
  {{ section.settings.HeadingTxt }}
  <p>{{ section.settings.Description }}</p>


  <div class="swiper-container swiper--top">
    <div class="swiper-wrapper">
      {% for blocks in section.blocks %}
        <div class="swiper-slide">
          <img src={{blocks.settings.ImagePicker | image_url }} alt="SlideImages" />
        </div>
      {% endfor %}
    </div>
  </div>


</div>


<style>
  .FeaturedSection {
    text-align: center;
  }
  .FeaturedSection h1 {
    margin-bottom: 0;
  }
  .swiper-container {
    width: 100%;
    height: 100%;
    position: relative;
     &:after {
      content: '';
      display: block;
      width: 200%;
      height: 1px;
      background-size: 10% 1px;
      background-position: -50px;
      background-repeat: repeat-x;
      position: absolute;
      left: -10%;
      top: 40%;
      animation: line-slide 60s forwards infinite linear;
      z-index: 1;
    }
    &.swiper--bottom {
       &:after {
        animation-direction: reverse;
      }
    }
  }
  .swiper-wrapper {
    -webkit-transition-timing-function: linear !important;
    transition-timing-function: linear !important;
    position: relative;
  }
  .swiper-slide {
    text-align: center;
    font-size: 33px;
    background: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    width: auto;
    position: relative;
    overflow: hidden;
    padding: 0 50px;
  }

  @keyframes line-slide {
    0% {
      background-position: -5% 0;
    }
    100% {
      background-position: 100% 0;
    }
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script>
   let SwiperTop = new Swiper('.swiper--top', {
  spaceBetween: 0,
  centeredSlides: true,
  speed: 6000,
  autoplay: {
    delay: 1,
  },
  loop: true,
  slidesPerView:'auto',
  allowTouchMove: false,
  disableOnInteraction: true
  });
</script>


{% schema %}
  {
    "name": "Dummy-Featured-Section",
    "settings": [
      {
        "type": "richtext",
        "id": "HeadingTxt",
        "label": "FeaturedHeading",
        "default": "<h1>Featured Heading</h1>"
      }, {
        "type": "richtext",
        "id": "Description",
        "label": "FeauredDescription",
        "default": "<p>Follow us on instagram to get featured</p>"
      }
    ],
    "blocks": [
      {
        "name": "SwiperSlides",
        "type": "Featured-section",
        "settings": [
          {
            "type": "image_picker",
            "id": "ImagePicker",
            "label": "SlidesImage"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Dummy Featured Section"
      }
    ]
  }
{% endschema %}