<div class="page-width">
<h1>{{ section.settings.heading }}</h1>
<div class="customContainer">
  {% for blocks in section.blocks %}
  <div class="customContainer_slide">
    {{ blocks.settings.title }}

    
    {% if blocks.settings.ImagePicker != blank %}
      <div class="customContainer_image">
      <img src={{blocks.settings.ImagePicker | image_url}} height="100" width="200"/>
    </div>
    {% else %}
      <p>Image doesn't exist</p>
    {% endif %}
    
    
    <h4 class="customContainer_title">{{ blocks.settings.description }}</h4>
  </div>
  {% endfor %}
</div>
</div>

<style>
  .customContainer{
    font-family: Arial, Helvetica, sans-serif;
    padding: 1rem;
    display: flex;
    gap: 1em;
  }
  .customContainer_slide{
    padding: 1em;
    box-shadow: 5px slategrey;
    max-width: 250px;
    border: 1px solid #ebebeb;
    align-items: center;
    display: flex;
    flex-direction: column;
     box-shadow: 5px slategray;
  }
  .customContainer_image img{
    width: 10vw;
  }
  .customContainer_title{
    text-align:center;
  }
</style>

{% schema %}
  {
    "name": "Slick-Slider",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "My custom heading"
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name":"slide",
        "settings": [
          {
            "type":"richtext",
            "id":"title",
            "label": "Title",
            "default": "<p>Title</p>"
          },
          {
            "type": "image_picker",
            "id": "ImagePicker",
            "label": "ImagePicker"
          },
          {
            "type":"text",
            "id":"description",
            "label":"Description",
            "default":"Description"
          }          
        ]
      }
    ],
    "presets" :[
      {
        "name":"Slick slider"
      }
    ]
  }
{% endschema %}