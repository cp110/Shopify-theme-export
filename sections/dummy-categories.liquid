<div class="page-width">
  <div class="HeadingTxt">{{ section.settings.CategoryHeading }}</div>
  <div class="DescriptionTxt">{{ section.settings.CategoryHeadingDesc }}</div>

  <div class="CategoryParentDiv">
    {% for blocks in section.blocks %}
      <div class="CategoryDivision">
        <img src={{blocks.settings.ImagePicker | image_url }} alt="image" />
        <div>{{ blocks.settings.CategoryDescription }}</div>
        <button class="ShopNowBtn">Shop Now</button>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .HeadingTxt{
    margin-top: 10rem;
  }
  .HeadingTxt,.DescriptionTxt {
    text-align: center;
  }
 
  .CategoryParentDiv{
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .CategoryDivision{
    text-align: center;
    justify-content: center;
    align-items: center;
  }
  .ShopNowBtn{
    background-color: #000;
    border: none;
    color: white;
    padding: 10px 15px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 20px;
    font-weight: 800;
  }
</style>

{% schema %}
  {
    "name": "Dummy-categories",
    "settings": [
      {
        "type": "richtext",
        "id": "CategoryHeading",
        "label": "Category Heading",
        "default": "<h1>#Featured Categories</h1>"
      }, {
        "type": "richtext",
        "id": "CategoryHeadingDesc",
        "label": "Category Description",
        "default": "<p>Phasellus lorem malesuada ligula pulvinar commodo maecenas</p>"
      }
    ],
    "blocks": [
      {
        "name": "slide",
        "type": "Categories",
        "settings": [
          {
            "type": "image_picker",
            "id": "ImagePicker",
            "label": "ImagePicker"
          }, {
            "type": "richtext",
            "id": "CategoryDescription",
            "label": "CategoryDescription",
            "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis risus elementum in malesuada an darius ut augue. Cras sit amet lectus et justo feugiat de euismod sed non merat. Nulla non felis id metus bibendum...</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Dummy new Categories"
      }
    ]
  }
{% endschema %}