<div class="Banner_Div">
  <div class="page-width">
    <div class="section-nr2">
      <div>
        <div class="TitleTxt">{{ section.settings.OurMissionTitle }}</div>
        <p class="ParaTxt">{{ section.settings.OurMissionDesc }}</p>
        <button class="RegisterBtn">Register</button>
      </div>
      <div class="section-img-nr2">
        <img
          class="section-img"
          src={{section.settings.BannerImage | image_url}}
          alt="Desk with blue pen on top. Blurred on the edges." />
      </div>
    </div>
  </div>
</div>

<style>
  .Banner_Div{
    background-color: #f5f5f5;
  }
  .section-nr2 {
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    margin: auto;
    padding: 5rem 0;
  }
  .section-img-nr2 {
    width: 40%;
  }
  .section-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .section-nr2-figcap {
    background-color: #f7f7f7;
    width: calc(50% - 7rem);
    padding: 3rem 3.5rem;
  }
  .Headingtxt{
    color: aquamarine;
  }
  .RegisterBtn{
    padding: 14px 32px 14px 32px;
    color: #FFFF;
    background-color: #4CAF4F;
    border: none;
    font-size: 16px;
    border-radius: 5px;
    margin-top: 20px;
  }
  .ParaTxt{
    font-size: 17px;
    font-weight: 400;
  }
  .TitleTxt h1{
    font-size: 55px;
    color: #4D4D4D;
    margin: 0;
    font-weight: 500;
  }
</style>

{% schema %}
  {
    "name": "Our-Mission Section",
    "settings": [
      {
        "type": "richtext",
        "id": "OurMissionTitle",
        "label": "Banner-Heading",
        "default": "<h1>HeadingTxt</h1>"
      }, {
        "type": "text",
        "id": "OurMissionDesc",
        "label": "Banner-Description",
        "default": "Where to grow your business as a photographer: site or social media?"
      }, {
        "type": "image_picker",
        "id": "BannerImage",
        "label": "Banner Image"
      }
    ]
  }
{% endschema %}