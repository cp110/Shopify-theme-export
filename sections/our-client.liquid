<div class="page-width">
  <div class="ClientSection">
    <h2>{{section.settings.heading}}</h2>
    <p>{{section.settings.description}}</p>
    <div class="IconDiv">
      {% for blocks in section.blocks %}
        <img src={{blocks.settings.IconImg | img_url}} alt="IconImage">
      {% endfor %}
    </div>
  </div>
</div>


<style>
    .ClientSection{
        text-align: center;
        margin: 5rem 0 5rem 0;
    }
    .ClientSection h2{
        font-size: 37px;
        font-weight: 600;
        margin-bottom: 0;
    }
    .ClientSection p{
        margin-bottom: 4rem;
    }
    .IconDiv{
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>



{% schema %}
  {
    "name": "Our-Client",
    "settings": [
        {
            "type": "text",
            "id":"heading",
            "label": "Client-Heading"
        },
        {
            "type": "text",
            "id": "description",
            "label": "Clent-Description"
        }
    ],
    "blocks": [
      {
        "type": "Slide",
        "name": "IconSlide",
        "settings": [
          {
            "type": "image_picker",
            "id": "IconImg",
            "label": "Icon Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Our-Clients"
      }
    ]
  }
{% endschema %}